<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgreen">

    <Button
        android:id="@+id/forDummiesDifficultyButton"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:onClick="forDummiesDifficult"
        android:text="@string/forDummies"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/easyDifficultyButton"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:onClick="easyDifficult"
        android:text="@string/easy"
        app:layout_constraintEnd_toEndOf="@+id/forDummiesDifficultyButton"
        app:layout_constraintLeft_toLeftOf="@+id/forDummiesDifficultyButton"
        app:layout_constraintTop_toBottomOf="@+id/forDummiesDifficultyButton" />

    <Button
        android:id="@+id/button12"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:onClick="hardDifficult"
        android:text="@string/hard"
        app:layout_constraintEnd_toEndOf="@+id/easyDifficultyButton"
        app:layout_constraintLeft_toLeftOf="@+id/easyDifficultyButton"
        app:layout_constraintTop_toBottomOf="@+id/easyDifficultyButton" />
</android.support.constraint.ConstraintLayout>